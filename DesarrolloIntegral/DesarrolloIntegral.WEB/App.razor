<Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="new[] {typeof(Shared.MainLayout).Assembly}">
    <Found Context="routeData">
        <CascadingValue Value="@ruta">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </CascadingValue>
    </Found>
    <NotFound>
        <PageTitle>No encontrado</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Lo sentimos, recurso no encontrado.</p>
        </LayoutView>
    </NotFound>
</Router>

@code
{
    public string ruta = "se graba en sqlserver";
}